[user]
	name = Damien L-G
	email = qdi@ornl.gov
[core]
	editor = vi
    pager = diff-highlight | less -r
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[alias]
    diff-highlight = !git diff --color | diff-highlight | less -r
    commit-auto-message = !git commit -m "\"$(curl -s http://whatthecommit.com/index.txt)\""
	log1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[diff]
    algorithm = minimal
    compactionHeuristic = true
    renames = true
[push]
	default = nothing
